<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/bluebackground"
              android:orientation="vertical">

    <Button
        android:id="@+id/btCreateNewSurvey"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:background="@drawable/oval_button"
        android:onClick="NewQuiz"
        android:text="Создание нового опроса"
        android:textSize="20dp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/btViewSurvey"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:background="@drawable/oval_button"
        android:text="Просмотр опросов"
        android:textSize="20dp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/btUsersInfo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:background="@drawable/oval_button"
        android:text="Просмотр пользователей"
        android:textSize="20dp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/btStatistics"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:background="@drawable/oval_button"
        android:text="Статистика"
        android:textSize="20dp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/btStartSurvey"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:background="@drawable/oval_button"
        android:text="Опрос граждан"
        android:textSize="20dp"
        android:textStyle="bold"/>
</LinearLayout>