<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Создание нового опроса"
        android:id="@+id/Create_new"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_margin="20dp"
        android:onClick="NewQuiz"
        android:background="@drawable/oval_button" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Просмотр опросов"
        android:id="@+id/View_quiz"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_margin="20dp"
        android:background="@drawable/oval_button" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Редактирование опросов"
        android:id="@+id/Edit_quiz"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_margin="20dp"
        android:background="@drawable/oval_button" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/inter_profile"
        android:layout_weight="1"
        android:layout_margin="20dp"
        android:text="Ввод данных о интервьюере"
        android:textStyle="bold"
        android:textSize="30dp"
        android:background="@drawable/oval_button" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Опрос граждан"
        android:id="@+id/quiz"
        android:layout_margin="20dp"
        android:layout_weight="1"
        android:textStyle="bold"
        android:textSize="30dp"
        android:background="@drawable/oval_button" />
</LinearLayout>